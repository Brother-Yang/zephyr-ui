{
  "name": "zephyr-react-ui",
  "version": "0.1.6",
  "description": "Zephyr UI: A modern, lightweight, and customizable React component library for quickly building elegant and accessible enterprise-grade interfaces",
  "keywords": [
    "react",
    "react-ui",
    "ui",
    "component-library",
    "design-system",
    "design-tokens",
    "typescript",
    "accessible",
    "a11y",
    "dark-mode",
    "i18n",
    "zero-dependencies",
    "form",
    "table",
    "tabs",
    "timeline",
    "tree",
    "modal",
    "drawer",
    "tooltip",
    "progress",
    "date-picker",
    "select",
    "input",
    "switch",
    "radio",
    "checkbox",
    "zephyr"
  ],
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./dist/zephyr-react-ui.css": "./dist/zephyr-react-ui.css"
  },
  "vitest": {
    "setupFiles": ["./vitest.setup.ts"]
  },
  "files": [
    "dist",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest --environment jsdom",
    "prepublishOnly": "pnpm run test && pnpm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brother-Yang/zephyr-react-ui.git"
  },
  "sideEffects": ["*.css"],
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.8",
    "jsdom": "^24.0.0",
    "vitest": "^2.1.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.2.3"
  }
}
